@page "/Clientes/Editar/{Identidad}"


<AuthorizeView Roles="Administrador">
    <Authorized Context="AutenticationState">
        <h3>Editar Cliente</h3>

        <EditForm Model="@client">
            <DataAnnotationsValidator />

            <div class="form-group row">
                <label form="Identidad" class="col-sm-2 col-form-label">
                    Identidad
                </label>
                <div class="col-sm-10">
                    <InputText id="Identidad" class="form-control" @bind-Value="client.Identidad" />
                    <ValidationMessage For="@(() => client.Identidad)" />
                </div>
            </div>

            <div class="form-group row">
                <label form="Nombre" class="col-sm-2 col-form-label">
                    Nombre
                </label>
                <div class="col-sm-10">
                    <InputText id="Nombre" class="form-control" @bind-Value="client.Nombre" />
                    <ValidationMessage For="@(() => client.Nombre)" />
                </div>
            </div>

            <div class="form-group row">
                <label form="Telefono" class="col-sm-2 col-form-label">
                    Telefono
                </label>
                <div class="col-sm-10">
                    <InputText id="Telefono" class="form-control" @bind-Value="client.Telefono" />
                    <ValidationMessage For="@(() => client.Telefono)" />
                </div>
            </div>

            <div class="form-group row">
                <label form="Correo" class="col-sm-2 col-form-label">
                    Correo
                </label>
                <div class="col-sm-10">
                    <InputText id="Correo" class="form-control" @bind-Value="client.Correo" />
                    <ValidationMessage For="@(() => client.Correo)" />
                </div>
            </div>

            <div class="form-group row">
                <label form="Direccion" class="col-sm-2 col-form-label">
                    Direccion
                </label>
                <div class="col-sm-10">
                    <InputText id="Direccion" class="form-control" @bind-Value="client.Direccion" />
                    <ValidationMessage For="@(() => client.Direccion)" />
                </div>
            </div>

            <div class="form-group row">
                <label form="FechaNacimiento" class="col-sm-2 col-form-label">
                    Fecha Nacimiento
                </label>
                <div class="col-sm-10">
                    <InputDate id="Fecha Nacimiento" class="form-control" @bind-Value="client.FechaNacimiento">

                    </InputDate>
                </div>
            </div>

            <div class="form-group row">
                <label form="EstaActivo" class="col-sm-2 col-form-label">
                    Esta Activo
                </label>
                <div class="col-sm-10">
                    <InputCheckbox @bind-Value="client.EstaActivo" />
                </div>
            </div>

            <div class="form-group row">
                <p>
                    <input type="submit" class="btn btn-primary" value="Guardar" @onclick="Guardar" />
                    <input type="submit" class="btn btn-danger" value="Cancelar" @onclick="Cancelar" />
                    <input type="submit" class="btn btn-warning" value="Eliminar" @onclick="Eliminar" />
                </p>
            </div>

        </EditForm>

    </Authorized>
    <NotAuthorized>
        <h3>No Tiene Permiso Para Entrar a esta Ruta</h3>
    </NotAuthorized>
</AuthorizeView>